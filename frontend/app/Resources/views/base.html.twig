<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}Ma Commune Wikipédia{% endblock %}</title>
		<link rel="stylesheet" type="text/css" media="screen, projection, print" href="{{ asset('css/style.css') }}" />
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		<div class="topbar">
			<a href="{{ path('home') }}"><img class="logo" src="{{ asset('img/logoheader_60.png') }}"/></a>
			{% block mainmenu %}
			<ul class="mainmenu">
				{% block searchbox %}
				<li class="mainmenuSearch">
					<form action="{{ path("communeSearch") }}" method="get">
						<input placeholder="Chercher mon village, ma ville" autocomplete="off" name="title" class="searchbox" id="searchbox"/>
						<input type="submit" value="Chercher"/>
					</form>
				</li>
				{% endblock %}
				{% if app.session.has("commune_title") %}
					<li><a href="{{ path("communeShow", {"qid": app.session.get("commune_qid") }) }}">{{ app.session.get("commune_title") }}</a></li>
					<li><a href="http://fr.wikipedia.org/wiki/{{ app.session.get("commune_wpTitle") }}"><img src="{{ asset("img/Wikipedia logo version 2_32.png") }}"/></a></li>
				{% endif %}
				<li><a href="{{ path('decrivez') }}">Décrivez</a></li>
				<li><a href="{{ path('illustrez') }}">Illustrez</a></li>
				<li><a href="{{ path('agissez') }}">Agissez</a></li>
				<li><a href="{{ path('contact') }}">Contact</a></li>
				<li><img src="{{ asset('img/facebook_white_36.png') }}"/></li>
				<li><img src="{{ asset('img/twitter_white_36.png') }}"/></li>

			</ul>
			{% endblock %}
		</div>
		{% block body %}{% endblock %}

		{% block javascripts %}
			<script type="text/javascript" src="{{ asset('js/suggest.js') }}"></script>
			<script type="text/javascript">
				window.onload = function() {
					{% block javascriptsOnload %}
					var node = document.getElementById("searchbox");
					if (node) {
						var suggest = new Suggest(node, "{{ path('apiSuggest', {"tree": "communes"})}}?str=");
						document.body.appendChild(suggest.node);
					}
					{% endblock %}
				}
			</script>
		{% endblock %}
	</body>
</html>
